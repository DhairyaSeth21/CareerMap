{
  "phases": {
    "setup": {
      "nixPkgs": ["jdk21", "gradle"]
    },
    "install": {
      "cmds": ["chmod +x gradlew"]
    },
    "build": {
      "cmds": ["./gradlew clean build -x test"]
    }
  },
  "start": {
    "cmd": "java -Dspring.profiles.active=prod -Dserver.port=$PORT -jar build/libs/*.jar"
  }
}
